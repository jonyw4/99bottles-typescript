{
    "name": "xtypescript",
    "version": "1.0.0",
    "description": "Exercism exercises in Typescript.",
    "author": "",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/exercism/xtypescript"
    },
    "devDependencies": {},
    "scripts": {
        "test": "jest /tests --no-cache",
        "lint": "tslint \"*.ts?(x)\"",
        "lintci": "tslint \"*.ts?(x)\" --force"
    },
    "dependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.17",
        "jest": "^24.9.0",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "typescript": "^3.7.3"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
